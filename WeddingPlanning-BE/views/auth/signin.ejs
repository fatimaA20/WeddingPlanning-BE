<section class="ftco-section">
  <div class="container">
          <div class="login-wrap p-3 p-md-4">
            <h3 class="mb-2 d-flex justify-content-center ">Sign In</h3>
            <form action="/auth/signin" method="post" class="signup-form mb-5">
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group d-flex align-items-center">
                    <label class="label" for="email">Email Address</label>
                    <input name="emailAddress" type="text" class="form-control" placeholder="johndoe@email.com" required>
                  </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group d-flex align-items-center">
                    <label class="label" for="password">Password</label>
                    <input name="password" type="password" class="form-control" placeholder="Password" required>
                  </div>
                </div>
              <br>
              <br>
                <div class="col-md-12">
                  <div class="form-group signup">
                    <button type="submit" class="btn sign">Sign In</button>
                  </div>
                </div>
                <div class="col-md-12 mb-2">
                  <div class="form-group signup">
                  </div>
                </div>
              </div>

            </form>

          </div>
        </div>
</section>




